---
title: FAQs
layout: base.njk

---


<section class="bg-black text-white">
    <div class="container flex flex-col lg:items-center mx-auto py-28 px-5 faq">
        {% set props = { text: 'FAQs'} %}
        {% include 'h2.njk' %}
        
        {% set props = { text: 'These are the most common ask AHK questions.'} %}
        {% include 'h3.njk' %}

        <div class="w-full max-w-4xl mx-auto mt-16">
            {% for faq in faqs | faqSort %}
                {% set props = { question: faq.fields.question, answer: faq.fields.answer | marked | safe } %}
                {% include 'accordion.njk' %}
            {% endfor %} 
        </div>

    </div>
</section>




<section class="bg-black text-white">
    <div class="container flex flex-col lg:items-center mx-auto pb-28 px-5 faq">
        {% set props = { text: 'Game Info List'} %}
        {% include 'h2.njk' %}
        
        {% set props = { text: 'All the facts we know so far for gaming with AHK'} %}
        {% include 'h3.njk' %}

        <div class="w-full max-w-4xl mx-auto mt-16">
            {% for faq in gameFaqs | gameFaqSort %}
                {% set props = { question: faq.question, answer: faq.answer | marked |safe } %}
                {% include 'accordion.njk' %}
            {% endfor %}
        </div>

    </div>
</section>


